[global]
    font = Ubuntu Mono 12
    allow_markup = yes
    format = "%b"
    sort = no
    indicate_hidden = yes
    alignment = left
    bounce_freq = 0
    show_age_threshold = -1
    word_wrap = yes
    ignore_newline = no
    # 46: skip numbers in vim from left
    # 40: skip few lines from top
    centering = "vertical"
    geometry = "0-16+10"
    transparency = 0
    idle_threshold = 0
    follow = keyboard
    sticky_history = yes
    line_height = 3
    separator_height = 1
    padding = 8
    horizontal_padding = 6
    separator_color = frame
    startup_notification = false
    dmenu = /usr/bin/dmenu -p dunst:
    timeout = 3
    browser = browser

[frame]
    width = 2
    color = "#ffd700"

[shortcuts]
    close = ctrl+space
    close_all = ctrl+shift+space
    history = ctrl+grave
    context = ctrl+shift+period

[urgency_low]
    background = "#000000"
    foreground = "#262626"
    timeout = 0

[urgency_normal]
    # vim secondary gray (airline right section)
    background = "#000000"
    # vim text white
    foreground = "#ffffff"
    timeout = 2

[urgency_critical]
    # unique gray-red color
    background = "#fcfcfc"
    # vim text white
    foreground = "#262626"
    timeout = 1
